FREQTRADE_API_PASSWORD=StoicGuard2024

# ------------------------------------------------------------------------------
# DATABASE (PostgreSQL - Optional, SQLite used by default)
# ------------------------------------------------------------------------------
POSTGRES_USER=stoic_trader
POSTGRES_PASSWORD=StoicDB2024
POSTGRES_DB=trading_analytics
DATABASE_URL=postgresql://stoic_trader:StoicDB2024@postgres:5432/trading_analytics

# ------------------------------------------------------------------------------
# JUPYTER LAB (Research environment)
# ------------------------------------------------------------------------------
JUPYTER_TOKEN=stoic2024

# ------------------------------------------------------------------------------
# MONITORING (Prometheus + Grafana)
# ------------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ------------------------------------------------------------------------------
# ADVANCED SETTINGS (Usually don't need to change)
# ------------------------------------------------------------------------------
# Trading mode
DRY_RUN=true
STAKE_CURRENCY=USDT
STAKE_AMOUNT=unlimited

# Risk limits
MAX_OPEN_TRADES=3
STOPLOSS=-0.05
TRAILING_STOP=true

# Timeframe
TICKER_INTERVAL=5m

# Logging
LOG_LEVEL=INFO

